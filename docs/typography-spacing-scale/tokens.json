      },
      "medium": {
        "$type": "number",
        "$value": "500",
        "$description": "Labels, emphasized text, button text"
      },
      "semibold": {
        "$type": "number",
        "$value": "600",
        "$description": "Headings, active states, key metrics"
      },
      "bold": {
        "$type": "number",
        "$value": "700",
        "$description": "Major headings, critical alerts"
      }
    },
    "fontFamily": {
      "base": {
        "$type": "fontFamily",
        "$value": "Inter",
        "$description": "Primary UI font"
      },
      "mono": {
        "$type": "fontFamily",
        "$value": "JetBrains Mono",
        "$description": "Code and monospace content"
      }
    }
